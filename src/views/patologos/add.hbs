<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body shadow-lg bg-white rounded">
                    <form action="/patologos/add" method="POST">
                        <div class="form-group"></div>
                        <h3>Nuevo Patólogo</h3>
                        <input type="text" name="patologo" class="form-control mb-1" placeholder="Nombre" required autofocus>
                        <input type="text" name="num_doc" class="form-control mb-1" placeholder="Num documento" required>
                        <input type="text" name="reg_med" class="form-control mb-1" placeholder="Registro Médico" required>
                        <input type="text" name="reg_med_ciudad" class="form-control mb-1" placeholder="Ciudad" required>
                        <input type="text" name="direccion" class="form-control mb-1" placeholder="Dirección" required>
                        <input type="text" name="telefono" class="form-control mb-1" placeholder="telefono" required>
                        <input type="email" name="email" class="form-control mb-1" placeholder="E-Mail" required>
                        <button class="btn btn-success btn-block">
                            Guardar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>