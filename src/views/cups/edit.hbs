<div class="container">
    <div class="col-md-5 mx-auto pad-top">
        <div class="card">
            <hr>
            <h3 class="text-centro">Editar CUPS</h3>
            <hr>
            <form action="/cups/edit/{{id}}" method="post">
            <div class="form-group text-centro">
                <input type="text" name="cups" value="{{cups.cups}}" placeholder="Codigo CUPS">
                <input type="text" name="valor" value="{{cups.valor}}" placeholder="Valor">
                <input type="text" name="descripcion" value="{{cups.descripcion}}" placeholder="Descripcion">
            </div>
            <div class="form-group text-center">
                <a href="/cups/lista" class="btn btn-success">
                    Volver&nbsp;<i class="fas fa-back"></i></a>
                <button class="btn btn-success">
                    Guardar&nbsp;<i class="fas fa-back"></i></button>
            </div>
            </form>
        </div>
    </div>
</div>
<style>
    th,
    td {
        padding-right: 10px;
    }
</style>