<div class="container">
    <table class="table" border="0">
        <tbody>
            <form action="" method="post">
                <!--Encabezado Inf Citologias -->
                <tr>
                    <td colspan="4">
                        <strong>
                            <p align="center">DATOS DEL PACIENTE</p>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">Infome:
                        <input type="text" name="informe_cod" value="{{informe.informe_cod}}" />
                        <input type="hidden" name="t_informe" value="{{informe.t_informe}}">
                    </td>
                    <td colspan="2">
                        <i>Patologo</i>
                        <select name="patologo">
                            <option selected="false" value="{{informe.patologo}}">{{informe.patologo}}</option>
                            {{#each patologos}}
                            <option value="{{patologo}}">{{patologo}}</option>
                            {{/each}}
                        </select>

                    </td>
                </tr>
                <tr>
                    <td>
                        Id <input name="numdoc" type="number" value="{{informe.numdoc}}"><br>
                        <select name="cups" id="cups">
                            <option value="{{informe.cups}}">{{informe.cups}}</option>
                            {{#each cups}}
                            <option value="{{cups}}">{{cups}}</option>
                            {{/each}}
                        </select>
                    </td>
                    <td id="nombre" scope="col">Paciente <input name="paciente" type="text"
                            value="{{informe.paciente}}"></td>
                    <td id="telefono" scope="col">Telefono <input name="telefono" type="text"
                            value="{{informe.telefono}}"></td>
                    <!--<td id="sexo" scope="col">-->
                    <input name="sexo" type="hidden" value="{{informe.sexo}}">
                    <!--</td>-->
                    <td scope="col">Edad: <p id="edad"></p>
                        <input name="edad" type="hidden" value="{{informe.edad}}">
                    </td>
                </tr>
                <tr>
                    <td scope="col"> <br>
                        <select name="entidad">
                            <option selected value="{{informe.entidad}}">{{informe.entidad}}</option>
                            {{#each entidades}}
                            <option value="{{razon_social}}">{{razon_social}}</option>
                            {{/each}}
                        </select><br>
                        <select name="eps">
                            <option selected value="{{informe.eps}}">{{informe.eps}}</option>
                            {{#each epss}}
