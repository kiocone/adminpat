<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/informes/consecutivo" method="POST">
            <div class="form-group" style="text-align: center;">
              <h3>Consecutivos</h3>
            </div>
            <div class="form-group">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col" style="text-align: center;">Q</th>
                    <th scope="col" style="text-align: center;">L</th>
                    <th scope="col" style="text-align: center;">C</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td scope="row"><input type="text" name="ultQ" id="ultQ" value="{{consecutivo.ultQ}}" size="3"></td>
                    <td><input type="text" name="ultL" id="ultL" value="{{consecutivo.ultL}}" size="3"></td>
                    <td><input type="text" name="ultC" id="ultC" value="{{consecutivo.ultC}}" size="3"></td>
                  </tr>
                </tbody>
              </table>

              <button class="btn btn-success btn-block">
                Guardar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>