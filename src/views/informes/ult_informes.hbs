<div class="container">
    <table class="table table-sm">
        <thead>
            <th>Ultimos 10 informes</th>
        </thead>
        <tbody>
            <tr>
                <td scope="col"><strong># Informe</strong></td>
                <td scope="col"><strong>Paciente</strong></td>
                <td scope="col"><strong>Documento</strong></td>
                <td scope="col"><strong>Entidad</strong></td>
                <td scope="col"><strong>Remite</strong></td>
                <td scope="col"><strong>Telefono</strong></td>
                <td scope="col"><strong>Fecha de Informe</strong></td>
                <td scope="col"><strong>Opciones</strong></td>
            </tr>
            {{#each informes}}
            <tr>
                <td class="small" scope="row">{{informe_cod}}</td>
                <td class="small" scope="row">{{paciente}}</td>
                <td class="small" scope="row">{{numdoc}}</td>
                <td class="small" scope="row">{{entidad}}</td>
                <td class="small" scope="row">{{medRemitente}}</td>
                <td class="small" scope="row">{{telefono}}</td>
                <td class="small" scope="row">{{fec_inf}}</td>
                <td class="small" scope="col">
                    <a href="/informes/edit/{{id}}" class="btn btn-success">
                        <i class='fas fa-edit'></i>
                    </a>
                    <a href="/informes/imprimir/{{id}}" class="btn btn-success">
                        <i class="fas fa-print"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
            <tr>
                <td colspan="7" class="text-center">
                    <a href="/informes/tipo_informe" class="btn btn-success">Nuevo Informe</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
