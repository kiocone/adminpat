    document.getElementById("tagNumInf").value = cod_informe;
    switch (t_informe) {
        case 'Q':
            console.log('Quirurgico.');
            document.getElementById("t_informe").selectedIndex = 0;
            break;
        case 'L':
            console.log('Liquido.');
            document.getElementById("t_informe").selectedIndex = 1;
            break;
        case 'C':
            console.log('Citologia');
            document.getElementById("t_informe").selectedIndex = 2;
            break;
        default:
            console.log('error en  tipo de informe.');
    }
</script>