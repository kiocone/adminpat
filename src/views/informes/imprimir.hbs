<div class="container">
    <table border="0" class="content-block">
        <thead>
            <tr class="header-space">
                <td colspan="3">
                    <div>
                        &nbsp;
                    </div>
                </td>
            </tr>
        </thead>
        <tbody>
            <!--Linea Horizontal-->
            <tr>
                <td colspan="4" style="color: rgb(117, 117, 117); font-size: 22px; line-height: 0px; padding-left: 0px; padding-bottom: 0px; padding-top: 0px; width:1000px;">
                    <strong><i>___________________________________________________________________________________</i></strong>
                </td>
            </tr>
            <tr>
                <td colspan="4">&nbsp;</td>
            </tr>
            <tr>
                <td scope="row" colspan="4" style="padding-top: 0px;">
                    <strong>
                        <p style="line-height: 21px; width:1000px;">DESCRIPCIÓN MACROSCÓPICA</p>
                    </strong>
                    <pre style="line-height: 21px; width:1000px;letter-spacing: -1px;">{{informe.macro}}</pre>
                </td>
            </tr>
            <tr>
                <td scope="row" colspan="4">
                    <strong>
                        <p>DESCRIPCIÓN MICROSCÓPICA</p>
                    </strong>
                    <pre style="line-height: 21px; width:1000px;letter-spacing: -1px;">{{informe.micro}}</pre>
                </td>
            </tr>
            <tr>
                <td scope="row" colspan="4">
                    <strong>
                        <p>DIAGNOSTICO:</p>
                    </strong>
                    <pre style="line-height: 21px; width:1000px;letter-spacing: -1px;">{{informe.diagnostico}}</pre>
                </td>
            </tr>
            {{#if observacion}}
            <tr>
                <td scope="row" colspan="4">
                    <strong>
                        <p>OBSERVACIONES:</p>
                    </strong>
                    <pre style="line-height: 21px; width:1000px;">{{informe.observaciones}}</pre>
                </td>
            </tr>
            {{/if}}
            {{#if inmuno}}
            <tr>
                <td scope="row" colspan="4">
                    <strong>
                        <p>INMUNOHISTOQUÍMICA:</p>
                    </strong>
                    <pre style="line-height: 21px; width:1000px;letter-spacing: -1px;">{{informe.inmuno}}</pre>
                </td>
            </tr>
            {{/if}}
            <tr>
                <td style="vertical-align: bottom;width:550px;">&nbsp;</td>
                <td>&nbsp;</td>
                <td style="text-align: center;" colspan="2">
                    <p>&nbsp;<br>
                        __________________________________<br>
                        Patologo: {{informe.patologo}}<br>
                        Registro: {{medico.reg_med}}
                    </p>
                </td>
            </tr>
        </tbody>
        <tfoot class="header-space">
            <tr>
                <td colspan="4">&nbsp;</td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="header">
    <img height="100" src="/img/logo.png" alt="Logo">&nbsp;
    <table border="0">
        <tr>
            <td colspan="4">
                <p style="line-height: 16px; padding-top: 10px; text-align: center; width:1000px;" class="textjusto-1">INFORME DE ESTUDIO
                    ANATOMOPATOLÓGICO No: <strong><i style="size: 24px;">{{informe.informe_cod}}</i></strong></p>
            </td>
        </tr>
        <tr style="">
            <td colspan="4">
                <p style="line-height: 10px; width:1000px;" class="textjusto-1"><strong>Paciente:</strong>
                    {{informe.paciente}}</p>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <p style="line-height: 10px; width:500px;" class="mayus textjusto-1"><strong>{{paciente.t_docu}}:</strong>
                    {{informe.numdoc}}</p>
            </td>
            <td>
                <p style="line-height: 10px;" class="mayus textjusto-1"><strong>Edad: </strong><i id="edad"></i></p>
            </td>
            <td>
                <p style="line-height: 10px;" class="mayus textjusto-1"><strong>Sexo:</strong>
                    {{informe.sexo}}</p>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>IPS:</strong>
                    {{informe.entidad}}</p>
            </td>
            <td colspan="2">
                {{#if eps}}
                <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>EPS:</strong> {{informe.eps}}
                </p>
                {{else}}
                &nbsp;
                {{/if}}
            </td>
        </tr>
        <tr>
            <td>
                <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>Ingreso:</strong>
                    {{informe.fec_ingreso}}</p>
            </td>
            <td colspan="3">
                <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>Informe:</strong>
                    {{informe.fec_inf}}</p>
            </td>
        </tr>
        <tr>
            <td colspan="4">
                <p style="line-height: 10px; width:1000px;" class="textjusto-1"><strong>Med. Remitente:</strong>
                    {{informe.medRemitente}}</p>
            </td>
        </tr>
    </table>
</div>
<div class="footer">
    <p class="pie">
        Medicos Patólogos-MediPat S.A.S, Calle Velez Danies #4-11 Piso 2<br>
        Telefono: 660.13.51 &#9679; 315.322.09.66 &#9679; Email: administracion@medipat.com.co
    </p>
</div>

