<div class="container left">
    <table border="0">
        <thead>
            <tr class="header-space xheaderf1">
                <td colspan="3">
                    <div>
                        &nbsp;
                    </div>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr class="xheaderf2">
                <td colspan="4">
                        <p style="line-height: 16px; text-align: center;" class="textjusto-1">INFORME DE ESTUDIO ANATOMOPATOLÓGICO No: <strong><i style="size: 24px;">{{informe.informe_cod}}</i></strong></p>
                </td>
            </tr>
            <tr class="xheaderf3">
                <td colspan="2" id="nombre" scope="row">
                    <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>Paciente:</strong> {{informe.paciente}}</p>
                </td>
                <td colspan="2" style="width:500px;" id="num_doc" scope="row">
                    <p style="line-height: 10px;" class="mayus textjusto-1"><strong>{{paciente.t_docu}}:</strong> {{informe.numdoc}} &nbsp; <strong>Edad: </strong><i id="edad"></i> &nbsp;<strong>Sexo:</strong> {{informe.sexo}}</p>
                </td>
            </tr>
            <tr class="xheaderf6">
                <td colspan="2">
                    <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>IPS:</strong> {{informe.entidad}}</p>
                </td>
                <td colspan="2">
                    {{#if eps}}
                    <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>EPS:</strong> {{informe.eps}}</p>
                    {{else}}
                    &nbsp;
                    {{/if}}
                </td>
            </tr>
            <tr>
                <td>
                    <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>Ingreso:</strong> {{informe.fec_ingreso}}</p>
                </td>
                <td colspan="3">
                    <p style="line-height: 10px; width:500px;" class="textjusto-1"><strong>Informe:</strong> {{informe.fec_inf}}</p>
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <p style="line-height: 10px; width:1000px;" class="textjusto-1"><strong>Med. Remitente:</strong> {{informe.medRemitente}}</p>
                </td>
            </tr>
            <!--Linea Horizontal-->
            <tr>
                <td colspan="4" style="line-height: 0px; padding-bottom: 0px; padding-top: 0px; width:1000px;">
                    ____________________________________________________________________________________________________________________
                </td>
            </tr>
            <tr>
                <td colspan="4">&nbsp;</td>
            </tr>
            <tr>
                <td scope="row" colspan="4" style="padding-top: 0px;">
                    <strong><p style="line-height: 21px; width:1000px;">DESCRIPCIÓN MACROSCÓPICA</p></strong>
                    <pre style="line-height: 21px; width:1000px;letter-spacing: -1px;">{{informe.macro}}</pre>
                </td>
            </tr>
            <tr >
                <td scope="row" colspan="4">
                    <strong><p>DESCRIPCIÓN MICROSCÓPICA</p></strong>
                    <pre style="line-height: 21px; width:1000px;letter-spacing: -1px;">{{informe.micro}}</pre>
                </td>
            </tr>
            <tr>
                <td scope="row" colspan="4">
                    <strong><p>DIAGNOSTICO:</p></strong>
                    <pre style="line-height: 21px; width:1000px;letter-spacing: -1px;">{{informe.diagnostico}}</pre>
                </td>
            </tr>
            {{#if observacion}}
            <tr>
                <td scope="row" colspan="4">
                    <strong><p>OBSERVACIONES:</p></strong>
                    <p style="line-height: 21px; width:1000px;">{{informe.observaciones}}</p>
                </td>
            </tr>
            {{/if}}
            {{#if inmuno}}
            <tr>
                <td scope="row" colspan="4">
                    <strong><p>INMUNOHISTOQUÍMICA:</p></strong>
                    <p>{{informe.inmuno}}</p>
                </td>
            </tr>
            {{/if}}
            <tr>
                <td style="vertical-align: bottom;">&nbsp;</td>
                <td>&nbsp;</td>
                <td style="text-align: center;">
                    <p>&nbsp;<br>
                        ____________________________________<br>
                        Patologo: {{informe.patologo}}<br>
                        Registro: {{medico.reg_med}}
                    </p>
                </td>
            </tr>
        </tbody>
        <tfoot class="header-space">
            <tr>
                <td colspan="4">&nbsp;</td>
            </tr>
        </tfoot>
    </table>
</div>

