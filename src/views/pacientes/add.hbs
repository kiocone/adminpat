<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/pacientes/add" method="POST">
                        <div class="form-group"></div>
                        <p>Tipo de Documento:
                            <select name="t_docu">
                                <option selected="true" value="C.C.">C.C.</option>
                                <option value="T.I.">T.I.</option>
                                <option value="R.C.">R.C.</option>
                                <option value="C.E.">C.E.</option>
                                <option value="PP">PP</option>
                            </select>
                        </p>
                        <input type="text" name="num_docu" id="numdocu" class="form-control" placeholder="Numero de Documento"
                            required>
                        <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre Completo"
                            required>
                        <input type="text" name="sexo" id="sexo" class="form-control" placeholder="M 칩 F" maxlength="1"
                            required>
                        <input type="text" name="direccion" class="form-control" placeholder="Direccoi칩n" required>
                        <input type="text" name="telefono" class="form-control" placeholder="telefono" required>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                        <p>Fecha de nacimiento (<i class="tenue">Mes-dia-A침o</i>):
                            <input type="number" id="edad" onchange="fechaNacimiento()" size="5"> <input type="date"
                                name="fecha_nacimiento" id="fecNac" min="1920-01-01" max="2040-12-31">
                        </p>
                        <textarea type="description" rows="2" class="form-control" name="description"
                            placeholder="Descripci칩n"></textarea>
                        <button class="btn btn-success btn-block">
                            Guardar.
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function fechaNacimiento() {
        var edad = document.getElementById("edad").value;
        var year = new Date().getFullYear();
        var mes = ("0" + (new Date().getMonth() + 1)).slice(-2);
        var dia = ("0" + (new Date().getDay() + 1)).slice(-2);
        var fechaNacimiento = (year - edad) + "-" + mes + "-" + dia;
        document.getElementById("fecNac").value = fechaNacimiento;
    }

    var numdocu = document.getElementById('numdocu');
    numdocu.onkeyup = function () {
        this.value = this.value.toUpperCase();
    }
    var nombre = document.getElementById('nombre');
    nombre.onkeyup = function () {
        this.value = this.value.toUpperCase();
    }
    var nombre = document.getElementById('sexo');
    nombre.onkeyup = function () {
        this.value = this.value.toUpperCase();
    }
    var email = document.getElementById('email');
    email.onkeyup = function () {
        this.value = this.value.toLowerCase();
    }
     
</script>