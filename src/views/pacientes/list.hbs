<div class="container">
    <table class="table table-sm">
        {{#if paciente}}
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Tipo</th>
                <th scope="col"># Doc</th>
                <th scope="col">Nombre</th>
                <th scope="col">Sexo</th>
                <th scope="col">direcci√≥n</th>
                <th scope="col">Telefono</th>
                <th scope="col">Email</th>
                <th scope="col">Edad</th>
                <th scope="col">Comentario</th>
                <th scope="col" colspan="3">Nuevo</th>
            </tr>
            <a href="/pacientes/add" class="btn btn-success">
                <i class='fas fa-plus-square'></i>
            </a>
        </thead>
        {{/if}}
        <tbody>
            {{#each paciente}}
            <tr>
                <td scope="row" class="small">{{id}}</td>
                <td class="small">{{t_docu}}</td>
                <td class="small">{{num_docu}}</td>
                <td class="small">{{nombre}}</td>
                <td class="small mayus">{{sexo}}</td>
                <td class="small">{{direccion}}</td>
                <td class="small">{{telefono}}</td>
                <td class="small">{{email}}</td>
                <td class="small"><time>{{f_nac}}</time></td>
                <td class="small">
                    <span class="tooltip-multiline tooltip-bottom-left" data-tooltip="{{description}}">
                        Ver
                    </span>
                    <a href="/pacientes/edit/{{id}}" class="btn btn-success">
                        <i class='fas fa-edit'></i>
                    </a>
                </td>
                <td>
                    <form method="GET" action="/informes/nuevo/{{id}}Q">

                        <a onclick="this.parentNode.submit();">Q</a>
                    </form>
                </td>
                <td>
                    <form method="GET" action="/informes/nuevo/{{id}}L">

                        <a onclick="this.parentNode.submit();">L</a>
                    </form>
                </td>
                <td>
                    <form method="GET" action="/informes/nuevoc/{{id}}C">

                        <a onclick="this.parentNode.submit();">C</a>
                    </form>
                    <!--
                    <a href="/informes/nuevo?t=Q" class="btn btn-success">Q</a>
                    <a href="/informes/nuevo?t=L" class="btn btn-success">L</a>
                    <a href="/informes/nuevo?t=C" class="btn btn-success">C</a>-->
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="8" class="text-center">
                    <p>hay ningun entidad guardado</p><br>
                    <a href="/pacientes/add" class="btn btn-success">Agregar Paciente</a>
                </td>
            </tr>
            {{/each}}
            {{#if paciente}}
            <tr>
                <td colspan="13" class="text-center">
                    <a href="/pacientes/add" class="btn btn-success">Agregar Paciente</a>
                </td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</div>