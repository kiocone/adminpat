<div class="container">
    <div class="col-md-5 mx-auto pad-top">
        <div class="card">
            <hr>
            <h3 class="text-centro">Solicitar liquidaciones</h3>
            <hr>
            <form action="/liquidacion/consulta" method="GET">
                <div class="form-group">
                    <select name="entidad" id="entidad">
                        <option value="0">Entidad</option>
                        {{#each entidades}}
                            <option value="{{razon_social}}">{{razon_social}}</option>
                        {{/each}}
                    </select>
                </div>
                <div>
                    <input type="date" name="fechaInicio" id="fechaInicio">
                
                    <input type="date" name="fechaFin" id="fechaFin">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Solicitar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.getElementById('fechaInicio').valueAsDate = new Date();
    document.getElementById('fechaFin').valueAsDate = new Date();
</script>